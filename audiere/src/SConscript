import os

Import('base_env PREFIX')

sources = Split("""
    debug
    device
    device_al
    device_mixer
    device_null
    file_ansi
    input
    input_ogg
    input_wav
    noise
    repeatable
    resampler
    sample_buffer
    sound_effect
    square_wave
    sound
    threads_posix
    timer_posix
    tone
    utility
    version
""")

sources = map(lambda n: n + '.cpp', sources)

target = base_env.Library('audiere', sources)

base_env.Install(os.path.join(PREFIX, 'include'), 'audiere.h')
base_env.Install(os.path.join(PREFIX, 'lib32'), target)
